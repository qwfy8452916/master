/**index.wxss**/
page{
  background: #f5f5f5;
}
.userinfo {
  height: 290rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  margin-bottom: 20rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  background: #ccc;
}
.userinfo-nickname {
  color: #aaa;
}
.user_mark, .user_look, .user_set{
  width: 100%;
  line-height: 100rpx;
  background: #fff;
  font-size: 34rpx;
  overflow: hidden;
}
.user_mark{
  border-bottom: 1px solid #e6e6e6;
}
.user_set{
  margin-top: 20rpx;
}
.mark_top, .look_top, .set_top{
  width: 90%;
  height: 100rpx;
  margin: 0 auto; 
}
.mark_info,.look_info{
  width: 90%;
  margin: 0 auto;
  margin-bottom: 35rpx;
  overflow: hidden;
}
.mark_info_item,.look_info_item{
  width: 212rpx;
  height: 170rpx;
  float: left;
  margin-right: 20rpx;
}
.item_img{
  width:212rpx;
  height: 120rpx;
  overflow: hidden;
}
.item_tit{
  font-size: 28rpx;
  text-align: center;
  line-height: 28rpx;
  margin-top: 20rpx;
  height: 28rpx;
  overflow: hidden;
}
.item_img image{
  width: 100%;
  height: 100%;
}
scroll-view{
  width: 100%;
  height: 170rpx;
}
.mark_info_list,.look_info_list{
  width: 1800rpx;
  height: auto;
}
