<view class="paddAll imglistbox">
  <block wx:for="{{imglist}}" wx:for-item="itemimg" wx:key="index">
    <view class="imgwh" data-index="{{index}}" bindtap="closeimg">
      <image src="{{itemimg.fileUri}}"></image>
      <image class="closebtn" src="../../img/icon-img11.png"></image>
    </view>
  </block>
  <view class="imgwh" wx:if="{{isshowupbtn == true}}" bindtap="bindChooiceProduct"><image src="../../img/upimg.png"></image></view>
</view>
<view class="page-box" wx:if="{{isshowpx == true}}">
  <view class="font-explanation">请按照想要的排列顺序依次点击图片</view>
  <view class="paddAll imglistbox">
    <block wx:for="{{imglist}}" wx:for-item="itemimg" wx:key="index">
      <view class="imgwh" data-index="{{index}}" bindtap="changeSort">
        <image src="{{itemimg.fileUri}}"></image>
        <view class="imgnum" wx:if="{{item.type == true}}">{{item.num}}</view>
      </view>
    </block>
  </view>
  <view class="confirmbtn" bindtap="confirmfun">确认</view>
</view>