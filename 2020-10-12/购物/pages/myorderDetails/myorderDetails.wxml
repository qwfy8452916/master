<view class="othordertitbox">
  <view class="alignleft">
    <text wx:if="{{orderinfo.delivWay==1}}">店内送</text>
    <text wx:if="{{orderinfo.delivWay==2}}">快递送</text>
    <text wx:if="{{orderinfo.delivWay==3}}">迷你吧</text>
    <text wx:if="{{orderinfo.delivWay==4}}">自提取</text>
    <text wx:if="{{orderinfo.delivWay==5}}">电子券</text>
    <text wx:if="{{orderinfo.delivWay==6}}">堂食</text>
    <text wx:if="{{orderinfo.delivWay==7}}">外卖</text>
    <text wx:if="{{orderinfo.delivWay==8}}">外带</text>
    <text wx:if="{{orderinfo.serialNumber}}" class="fontweight">-{{orderinfo.serialNumber}}</text>
  </view>
  <view class="alignright" style="color:#10BBBB">
    <text wx:if="{{orderinfo.status=='0'}}">待确认</text>
    <text wx:if="{{orderinfo.status=='1'}}">已确认</text>
    <text wx:if="{{orderinfo.status=='2'}}">
      <block wx:if="{{orderinfo.delivWay != 2 || orderinfo.lgcName == '' || orderinfo.lgcName == null}}">已发货</block>
      <block wx:else>
        <block wx:if="{{orderinfo.lgcStatus == 1}}">待接单</block>
        <block wx:elif="{{orderinfo.lgcStatus == 2}}">待取货</block>
        <block wx:elif="{{orderinfo.lgcStatus == 3}}">配送中</block>
        <block wx:elif="{{orderinfo.lgcStatus == 4}}">已完成</block>
      </block>
    </text>
    <text wx:if="{{orderinfo.status=='3' || orderinfo.status=='4'}}">已退款</text>
  </view>
</view>
<view class="detailListbox">
  <view class="titlebox" wx:if="{{orderinfo.delivWay=='1'}}">
    <text>{{orderinfo.hotelName}}</text>
    <text class="floorroom">{{orderinfo.roomFloor}}-{{orderinfo.roomCode}}</text>
  </view>
  <view class="addressbox" wx:if="{{orderinfo.delivWay=='2'}}">
    <view class="textitem">
        <text class="textitem_title">{{orderinfo.consignee}}</text>  {{orderinfo.consigneePhone}}
    </view>
    <view>{{orderinfo.consigneeSite}}</view>
  </view>
  <block wx:if="{{orderinfo.delivType!='1'}}" wx:for="{{orderinfo.orderDeliveryDetailDTOList}}" wx:for-item="item" wx:key="index">
    <view class='orderlistbox-c'>
      <view class='contentbox1'>
        <image wx:if="{{item.prodHotelProductDTO.prodLogoUrl!=''&&item.prodHotelProductDTO.prodLogoUrl!=null}}" src='{{item.prodHotelProductDTO.prodLogoUrl}}' class='spimg' mode='aspectFill'></image>
        <image wx:else src='{{item.prodProductDTO.prodLogoUrl}}' class='spimg' mode='aspectFill'></image>
        <view class='font-content'>
          <view wx:if="{{item.prodHotelProductDTO.prodShowName!=''&&item.prodHotelProductDTO.prodShowName!=null}}" class='font-name font-overflow fontcolor' style='width: 100%;'>{{item.prodHotelProductDTO.prodShowName}}</view>
          <view wx:else class='font-name font-overflow fontcolor' style='width: 100%;'>{{item.prodProductDTO.prodShowName}}</view>
          <view class="spec-font">{{item.prodSpecs}}</view>
          <view class='font-name2 alignright' style='width: 100%;'>
            <text style="color:#EE1E1E">¥ {{item.prodPrice}}</text>
            <block wx:if="{{(orderinfo.delivWay == 1 || orderinfo.delivWay == 4 || orderinfo.delivWay == 6 || orderinfo.delivWay == 8 || orderinfo.lgcStatus == 3) && orderinfo.status != 0}}"></block>
            <block wx:else>
              <text class="refundbtn" wx:if="{{item.prodCsTimes < item.prodCount && orderinfo.status != 3 && orderinfo.status != 4 && item.prodStatus != 5 && item.actualPay > 0}}" data-index="{{index}}" bindtap="refundfun">
                <block wx:if="{{orderinfo.status == 0}}">退款</block>
                <block wx:else>申请售后</block>
              </text>
              <text class="refundbtn font-color2 bordernone" wx:elif="{{item.prodStatus == 1 || item.prodStatus == 2}}">已退款</text>
              <text class="refundbtn font-color2" wx:elif="{{item.prodStatus == 3}}">已换货</text>
              <text class="refundbtn font-color2" wx:elif="{{item.prodStatus == 4}}">已退货退款</text>
              <text class="refundbtn font-color1" wx:elif="{{item.prodStatus == 5}}">处理中</text>
            </block>
          </view>
        </view>
        <view class='font-name2 font-width'>x {{item.prodCount}}</view>
      </view>
    </view>
  </block>
  <!-- 客房服务订单 -->
  <block wx:if="{{orderinfo.delivType=='1'}}" wx:for="{{roomServerdata}}" wx:key="index">
    <view class='orderlistbox-c'>
      <view class='contentbox1'>
        <image src='{{item.commonStyleDTO.picUrl}}' class='spimg' mode='aspectFill'></image>
        <view class='font-content'>
          <view class='font-name font-overflow fontcolor' style='width: 100%;'>{{item.commonStyleDTO.name}}</view>
          <view class='font-name2 alignright' style='width: 100%;'>
            <text style="color:#EE1E1E">¥ {{item.commonStyleDTO.price}}/{{item.commonStyleDTO.unit}}</text>
            
          </view>
        </view>
        <view class='font-name2 font-width'>x {{item.count}}</view>
      </view>
    </view>
  </block>
</view>
<view class="hejibox" wx:if="{{orderinfo.delivType!='1'}}">
  <view class="hejiboxitem">
    <text class="alignleft">商品总价</text>
    <text class="alignright">¥ {{orderinfo.totalAmount}}</text>
  </view>
  <view class="hejiboxitem">
    <text class="alignleft">优惠金额</text>
    <text class="alignright">¥ {{orderinfo.couponAmount}}</text>
  </view>
  <view class="hejiboxitem">
    <text class="alignleft">商品抵扣金额</text>
    <text class="alignright">¥ {{orderinfo.vouDeductAmount}}</text>
  </view>
  <view class="hejiboxitem">
    <text class="alignleft">现金抵扣金额</text>
    <text class="alignright">¥ {{orderinfo.cashDeductAmount}}</text>
  </view>
  <view class="hejiboxitem">
    <text class="alignleft">减免金额</text>
    <text class="alignright">¥ {{orderinfo.discountAmount}}</text>
  </view>
  <view class="hejiboxitem" wx:if="{{orderinfo.delivWay == 2 && (orderinfo.expressFee != 0 || orderinfo.lgcActualFee != 0)}}">
    <text class="alignleft">运费</text>
    <text class="alignright" >¥ <block wx:if="{{orderinfo.expressFee != 0}}">{{orderinfo.expressFee}}</block><block wx:else>{{orderinfo.lgcActualFee}}</block></text>
  </view>
</view>
<view class="jijianbox" wx:if="{{orderinfo.delivType!=1}}">
  <!-- <view class="refreshbtn" wx:if="{{orderinfo.delivWay == 2 && orderinfo.status == '2' && orderinfo.lgcStatus != 4 && orderinfo.lgcName}}" data-delivcode="{{orderinfo.delivCode}}" bindtap="refreshfun">刷新状态</view> -->
  <view>
    <text class="totalcount">共<text class="textcolor">{{orderinfo.prodCount}}</text>件商品</text>
    <text class="jimoney">合计<text class="jincolor">¥ {{orderinfo.actualPay}}</text></text>
  </view>
</view>

<view class="orderinfobox">
  <view class="orderinfo_title">订单信息</view>
  <view class="xiadanpay">
    <view class="xiadanpay_bottom"><text class="xiadanpay_title">订单编号</text>{{orderinfo.delivCode}}</view>
    <view wx:if="{{orderinfo.delivType!='1' && orderinfo.delivType!='2'}}" class="xiadanpay_bottom"><text class="xiadanpay_title">交易号</text>{{orderinfo.transactionId}}</view>
    <view class="xiadanpay_bottom"><text class="xiadanpay_title">创建时间</text>{{orderinfo.createdAt}}</view>
    <view class="xiadanpay_bottom" wx:if="{{orderinfo.delivType!=1}}"><text class="xiadanpay_title">付款时间</text>{{orderinfo.payCompleteTime}}</view>
    <view class="xiadanpay_bottom" wx:if="{{orderinfo.status==1}}"><text class="xiadanpay_title">确认时间</text>{{orderinfo.confirmTime}}</view>
    <view class="xiadanpay_bottom" wx:if="{{orderinfo.status==2}}"><text class="xiadanpay_title">发货时间</text>{{orderinfo.shipmentsTime}}</view>
  </view>
</view>

<view class="contactbox" bindtap="servicefun">
  <image class="kefulogo" src="../../img/icon-img9.png"></image>
  <text class="contactbtn">联系客服</text>
</view>
