<view wx:if="{{showtype}}" class="shareboxbg">
  <view class="sharebox">
    <view class="fontts">{{shareTitle?shareTitle:(user_name?user_name+'给你发了一个现金红包，领取后可提入微信零钱':'好友给你发了一个现金红包，领取后可提入微信零钱')}}</view>
    <image wx:if="{{imgurldata}}" src="{{imgurldata}}" class="imgbox" mode="widthFix"></image>
    <image wx:else src="{{global_Data.imgurldata}}shareimg.png" class="imgbox" mode="widthFix"></image>
    <view class="ts-font"><text>提示：</text>红包发出后可多人领取，包括自己</view>
    <view class="sharebtnbox2">
      <view class="btn" bindtap="closefun">取消</view>
      <button open-type="share" data-type="1" class="btn btncss">发出红包</button>
    </view>
  </view>
</view>
<view wx:if="{{sharetype}}" class="shareboxbg" bindtap="closefuns" catchtouchmove="return">
  <view class="shareway">
    <view class="share-font1">选择分享方式</view>
    <view class="shareway-b">
      <view class="imgbtn" catchtap="sharefun1"><image mode="widthFix" style="width:100%" src="../../img/shareimg1.jpg"></image></view>
      <view class="imgbtn" catchtap="get_poster"><image mode="widthFix" style="width:100%" src="../../img/shareimg2.jpg"></image></view>
    </view>
  </view>
</view>
<view wx:if="{{showPoster}}" class="shareboxbg" catchtouchmove="return">
  <view class="shareway2">
    <view class="closebtn-img" bindtap="closefunP"><image src="../../img/my-btnimg23.png"></image></view>
    <image class="posterimg" bindtap="previewImg" mode="widthFix" src="{{posterurl}}"></image>
    <view class="posterbtn posterbtn1" bindtap="saveimg">保存到手机相册</view>
    <view class="posterbtn posterbtn2" bindtap="previewImg">预览海报长按分享</view>
  </view>
</view>