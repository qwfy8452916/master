<block wx:if="{{isshowicon == true}}"><image class="img-my-icon" bindtap="hideiconfun" mode="widthFix" src="../../img/icon-img21.png"></image></block>
<view class='font-warning {{cabopentype == true?"font-warning2":""}}' wx:if="{{ishasmnb == 0}}" bindtap="openagain"><!-- font-warning2 -->
  <view class="font-warning-l">
    <block wx:if="{{cabopentype == false}}"><image src="../../img/laba-1.png"></image></block>
    <block wx:else><image src="../../img/laba-2.png"></image></block>
    如柜门未打开，请点击"再次打开" 
  </view>
  <text class="openbtn">再次打开</text>
</view>
<view class='bgfff success-top'>
  <image src='../../img/success-img2.png' class='iconimg'></image>
  <view class='font-text1'>提交成功!</view>
  <view class='font-text2'>
    <block wx:if="{{ishasmnb == 1}}">您的商品正在整装待发...</block>
    <block wx:else>柜门已打开，请取走商品</block>
  </view>
  <view class='successbtnbox'>
    <view class='successbtn successbtn2' bindtap='backfun'>继续购买</view>
    <view wx:if="{{ishasmnb == 1}}" class='successbtn successbtn1' bindtap='orderdetails'>查看详情</view>
    <view wx:else class='successbtn successbtn1' bindtap='orderlist'>查看订单</view>
  </view>
</view>
<view class="share_redbag" wx:if="{{redcode != -1}}">
  <image mode="widthFix" bindtap="sharefun" src="{{global_Data.imgurldata}}shareredbag.jpg"></image>
  <view class="redbagInfo">
    <view class="redbagInfo1">
      <text class="yuan"></text>
      <text class="redbagInfo2">红包有效期 {{redData.deadlineAt}}前有效</text>
    </view>
    <view class="redbagInfo1">
      <text class="yuan"></text>
      <text class="redbagInfo2">红包金额{{redData.totalAmount}}元，红包数量{{redData.totalNum}}个</text>
    </view>
  </view>
</view>
