/* pages/common/tabbar/tabbar.wxss */
.tabbar{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 999;
}
.bottomtab{
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    background: #fff;
    box-shadow: 0 -2px 10px 1px #eeeeee;
}
.footerbox-btn{
    flex:1;
    padding: 12px 0;
    text-align: center;
    font-size: 27rpx;
    color: #888FA1;
}
.expand{
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: #FF6930;
    display: flex;
    justify-content: center;
    align-items: center;
    /* margin: 0 10px; */
    margin-top: -24px;
}
.arrow{
    width: 22px;
}
.tabBack{
    background: rgba(0, 0, 0, .6);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 998;
    width: 100%;
    height: 100%;
}
.expandPage{
    position: absolute;
    top: 0;
    z-index: -1;
    padding-bottom: 65px;
    width: 100%;
    background: #fff;
    border-radius: 20px 20px 0 0 ;
}
.menuItems{
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
}
.menuItem{
    padding: 13px 20px;
    border-bottom: 1px #f5f5f5 solid;
    box-sizing: border-box;
    display: flex;
    font-size: 15px;
    align-items: center;
    color: #888FA1;
}
.menuName1{
    font-size: 18px;
    color: #2B2D30;
}
.menuName2{
    font-size: 14px;
}
.menuName{
    flex: 1;
}
.menuItem-li{
    width: 25%;
    text-align: center;
    display: block;
    border: none;
    padding: 13px 0;
}
.menuItem-li .menuName1{
    font-size: 13px;
}
.menuItem-li .menuName2{
    font-size: 12px;
}
.nav-icon{
    display: block;
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto 10rpx;
}