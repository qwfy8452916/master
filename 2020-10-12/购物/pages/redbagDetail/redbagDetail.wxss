    align-items: center;
}
.redDetail1_3{
    padding: 4px 15px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    color: #878B8F;
    font-size: 12px;
    border-top: 1px #F6F6F6 solid;
}
.orderTime1{
    margin-top:5px
}
.endtime{
    margin-right: 15px;
}
.friendHead{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 94%;
    margin: 0 auto;
}
.friendtitle{
    font-size: 14px;
    font-weight: bold;
    margin-left: 10px;
}
.redNum{
    font-size: 10px;
}
