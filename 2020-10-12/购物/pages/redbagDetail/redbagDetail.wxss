    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 15px;
    height: 34px;
    font-size: 14px;
    border-bottom: 1px #F6F6F6 solid;
}
.status{
    color: #0FBBBB;
}
.redDetail1_2{
    padding: 0 15px;
    height: 95px;
}
.redDetail1_2_1{
    display: flex;
    align-items: center;
    font-size: 12px;
