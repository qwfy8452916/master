<!--pages/shareRecords/shareRecords.wxml-->
<view class="share">
    <!-- <view class="menu">
        <text class="menu1">分享记录</text>
        <text class="menu1">分享访问记录</text>
        <text class="menu1">分享订单记录</text>
    </view> -->
    <view class="shareContent">
        <view class="shareItem" wx:for="{{shareData}}" wx:key>
            <view class="item1">
                <text style="color:#333">分享记录ID：{{shareId}}</text>
                <text style="color:#888C8F">已完成</text>
            </view>
            <view class="item2">
                <view class="item2_2">
                    <view class="data1">
                        <text class="numstyle">{{item.prodCount}}</text>
                        <text class="numword">商品数量</text>
                    </view>
                    <view class="data1">
                        <text class="numstyle">{{item.totalAmount}}</text>
                        <text class="numword">商品金额</text>
                    </view>
                    <view class="data1">
                        <text class="numstyle">{{item.orderAmount}}</text>
                        <text class="numword">实付金额</text>
                    </view>
                </view>
            </view>
            <view class="item3">
                <view class="item3_1">
                    <image style="width:13px;height:13px" src="../../img/order.png" />
                    <text class="visit">订单号</text>
                    <text class="num">{{item.orderId}}</text>
                </view>
                <view class="item3_1">
                    <image style="width:13px;height:13px" src="../../img/room.png" />
                    <text class="visit">房间号</text>
                    <text class="num">{{item.roomCode}}</text>
                </view>
                <view class="item3_1">
                    <image style="width:13px;height:13px" src="../../img/people.png" />
                    <text class="visit">顾客ID</text>
                    <text class="num">{{item.userId}}({{item.userName}})</text>
                </view>
            </view>
            <view class="item4">
                支付时间 {{item.orderTime}}
            </view>
        </view>
    </view>
    <view class="none" style="padding:30px 30px;font-size:14px;color:#ccc" wx:if="{{ifshow}}">
        暂无订单记录
    </view>
</view>
