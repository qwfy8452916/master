  }
.alignrig{
  float: right;
}
.placems{
  color:#C5C9CF; 
  font-size: 28rpx;
}
  .placemsall{
   color: #FF6930;
  }
.iconwangyou{
  color: #888c8f;
  font-size: 28rpx;
}

/* 下拉选择 */
.surebtn{
  width: 92%;
  padding: 30rpx 0rpx;
  box-sizing: border-box;
  background-image: linear-gradient(to right,#f0904d,#ed7142);
  color: #FFFFFF;
  text-align: center;
  border-radius:20rpx;
  position: fixed;
  bottom: 30rpx;
  right: 0;
  left: 0;
  margin: auto;
  font-size: 36rpx;
}
.switchbox{
  display: flex;
  justify-content: space-between;
}

.specbox{
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.specContent{
  width: 100%;
  padding: 30rpx 3%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.specContent .speclef{
  width: 220rpx;
  height: 176rpx;
  overflow: hidden;
  border-radius: 5rpx;
}
.speclef image{
  width: 100%;
  height: 100%;
}
.specContent .specrig{
  margin-left: 20rpx;
  width: calc(100% - 240rpx);
  font-size: 24rpx;
  color: #2b2d30;
}
.specrig .specTitle{
  width: 100rpx;
  margin-right: 15rpx;
  color: #888FA1;
}
.specrig .specTitle2{
  width: 80rpx;
  margin-right: 15rpx;
  color: #888FA1;
}
.specrig .priceBox{
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-right: 25rpx;
}
.pricestyle{
  color: #ff4f4f;
}
.btnBox{
  width: 100%;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #e9eaea;
}
.sortBox{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  background: #ffe1d6;
  color: #ff6930;
  font-size: 24rpx;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  
}
.wrapbtn{
  display: flex;
  justify-content: flex-end;
}
.btnBox .btnitem{
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  border: 1px solid #d5d5d6;
  color: #2b2d30;
  border-radius: 24rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
}

.addSpec{
  width: 100%;
  text-align: center;
  padding: 30rpx 0rpx;
  box-sizing: border-box;
  color: #fff;
  font-size: 36rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #f08d4c;
}


