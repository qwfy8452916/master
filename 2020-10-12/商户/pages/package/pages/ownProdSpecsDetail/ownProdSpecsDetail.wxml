<!--pages/package/pages/ownProdSpecsDetail/ownProdSpecsDetail.wxml-->


<view class="wrap">

    <view class="contentkbox">
      <view class="titlebox">
        <view class="linebak"></view>商品规格
      </view>
      <view class="rowbox">
        <view class="rowtitle">规格名称
        </view>
        <view class="putbox alonerow">
        {{prodSpecsData.specName}}
        </view>
      </view>
      <view class="rowbox">
        <view class="rowtitle">显示名称</view>
        <view class="putbox alonerow">{{prodSpecsData.showName}}</view>
      </view>

      <view class="hangBox">
         <view class="inhangbox">
            <view class="hangTitle">供货价</view>
            <view>{{prodSpecsData.supplyPrice}}元</view>
         </view>
         <view class="inhangbox">
            <view class="hangTitle">零售价</view>
            <view>{{prodSpecsData.retailPrice}}元</view>
         </view>
         <view class="inhangbox">
            <view class="hangTitle">划线价</view>
            <view>{{prodSpecsData.marketPrice}}元</view>
         </view>
         <view class="inhangbox">
            <view class="hangTitle">可售数量</view>
            <view>{{prodSpecsData.availableSaleQty}}</view>
         </view>
         <view class="inhangbox">
            <view class="hangTitle">排序</view>
            <view>{{prodSpecsData.sort}}</view>
         </view>
         <view class="inhangbox">
            <view class="hangTitle">规格说明</view>
            <view>{{prodSpecsData.specInstruction}}</view>
         </view>

         <view class="rowbox nopadd notopbor">
            <view class="rowtitle">详情banner</view>
            <view class="picbox">
              <view class="showpicbox">
                <view class="picitem" wx:for="{{prodSpecsData.bannerImageList}}" wx:key="index">
                  <image src="{{item.imageUrl}}"></image>
                </view>
              </view>
            </view>
          </view>

      </view>

    </view>

</view>






