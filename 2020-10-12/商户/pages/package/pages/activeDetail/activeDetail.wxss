  align-items: center;
  justify-content: space-between;
  padding: 30rpx 4%;
  box-sizing: border-box;
}
.timeBox .addTime{
  color: #FF6A31;
}
.pickTime{
  display: flex;
  justify-content: flex-start;
  padding: 0 !important;
