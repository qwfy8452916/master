/* swtich整体大小 */
.wx-switch-input{
  width: 80rpx !important;
  height: 48rpx !important;
}
/* false的样式 */
.wx-switch-input::before{
  width: 80rpx !important;
  height: 48rpx !important;
}
/* true的样式 */
.wx-switch-input::after{
  width: 45rpx !important;
  height: 46rpx !important;
}
.sureBtn{
  width: 95%;
  padding: 30rpx 0rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
  color: #fff;
  font-size: 36rpx;
  background-image:linear-gradient(to right,#f0904d,#ed7142);
  text-align: center;
  margin: 0 auto;
  margin-bottom: 40rpx;
}
.dayBox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  border-bottom: 1px solid #e9eaea;
  flex-wrap: wrap;
}
.dayBox::after{
  content:"";
  flex: auto;
}
.dayBox .dayitem{
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: #e7e9ec;
  color: #2C2E30;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin:20rpx 20rpx;
}
.choiceitemActive{
  background: #ffe1d6 !important;
  color: #FF6A31 !important;
  border: none !important;
}
.weekBox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  border-bottom: 1px solid #e9eaea;
}
.weekBox::after{
  content:"";
  flex:auto;
}
.weekitem{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #2C2E30;
  background: #e7e9ec;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
  margin: 20rpx 10rpx;
}
.monthBox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  border-bottom: 1px solid #e9eaea;
  flex-wrap: wrap;
}
.monthBox::after{
  content: "";
  flex: auto;
}
.monthitem{
  padding: 10rpx 30rpx;
  background: #e7e9ec;
  color: #2C2E30;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  margin:20rpx 15rpx;

}
.timeBox{
  width: 100%;
