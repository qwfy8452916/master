.choiceitemActive{
  background: #e1f3f3;
  color: #10bbbb !important;
  border: none !important;
}



.surebtn{
  width: 96%;
  padding: 30rpx 0rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size:36rpx;
  background-image: linear-gradient(to right,#F0904D,#ED7142); 
  text-align: center;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 40rpx;
  z-index: 9;
}


