/* pages/package/pages/enterConfigAdd/enterConfigAdd.wxss */

page{
  background: #f2f2f5;
  border-top: 1px solid #e4e4e5;
}
.wrap{
  width: 100%;
  padding: 0rpx 3%;
  box-sizing: border-box;
  overflow: hidden;
  padding-bottom: 200rpx;
  font-size: 28rpx;
}
.contentkbox{
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}
.titlebox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 32rpx;
  color: #2B2D30;
  padding: 30rpx 3%;
  box-sizing: border-box;
  border-top: 1px solid #e9eaea;


}
.linebak{
  width: 8rpx;
  height: 24rpx;
  background: #FF6A30;
  border-radius: 4rpx;
  margin-right:15rpx; 
}
.rowbox{
  width: 100%;
  padding: 30rpx 3%;
  box-sizing: border-box;
  border-top: 1px solid #e9eaea;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-wrap: wrap;
  position: relative;
}
.rowtitle{
  width: 170rpx;
  margin-right:20rpx;
  font-size:28rpx;
  color: #888FA1;
  flex-shrink: 0;
  position: relative;
}
.rowtitlesupper{
  width: 260rpx;
}
.switchbox{
  justify-content: space-between;
}
.widthreset{
  width: 235rpx !important;
}
.star{
  position: absolute;
  color: #FF4F4F;
  top: -4rpx;
  right: 5rpx;
}
.putbox{
  width: calc(100% -180rpx);
}
.putbox input{
  width: 100%;
}



/* 下拉选择 */


.pickbox{
    padding: 30rpx 4%;
    background-color: #FFFFFF;
    overflow: hidden;
    font-size: 32rpx;
    box-sizing: border-box;
    border-radius:15rpx;
    border-top: 1px solid #e9eaea;
}
.pickbox .pickeritem{
  display: inline-block;
  width:165rpx;
  text-align: left;
  margin-right: 20rpx;
  color:#888FA1;
  position: relative;
  font-size: 28rpx;
  }
