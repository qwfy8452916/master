/* 下拉选择 */



.choice{
  font-size: 24rpx;
  color: #888FA1;
}
.danhang{
  flex-basis: 100%;
  display: flex;
  margin-top: 10rpx;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  
}
.danhang:after {
   content: "";
   flex: auto;
  }
.danhang .choiceitem{
  padding: 10rpx 26rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  border: 1px solid #d5d5d6;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #888FA1;
  margin-right: 10rpx;
}
