/* 账号切换 */
.switchAccount{
  background: #fff;
  padding: 35rpx;
  width: 100%;
  text-align: center;
  font-size:28rpx;
  color: #888C8F;
  margin-top: 20rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
}
