/* pages/flexiblePriceSetting/flexiblePriceSetting.wxss */
page {
  border-top: 1px solid #e5e5e5;
  background: #f6f6f6;
}

.wrap {
  width: 100%;
  padding: 0rpx 3%;
  box-sizing: border-box;
  margin-bottom: 50rpx;
}

.hexBox {
  background: #fff;
  border-radius: 25rpx;
  margin-top: 40rpx;
  font-size: 36rpx;
}

.hexRow {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.inpuBox{
  width: 100%;
  padding: 30rpx 10%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.line{
  width: 20px;
  height: 1px;
  background: #AFB0B1;
}

.moreimg{
  width: 48rpx;
  height: 48rpx;
  display: inline-block;
  transform:rotate(180deg);
}
.lefBox{
  color: #8790A4;
}
.rightBox{
  color: #2B2D30;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bottomSubmitBtn{
  width: 100%;
  height: 94rpx;
  background-image:linear-gradient(to right, #FF8A3A , #FF6830);
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  line-height: 94rpx;
}
/* 下拉选择 */


.pickbox{
  padding: 30rpx 4%;
  background-color: #FFFFFF;
  overflow: hidden;
  font-size: 32rpx;
  box-sizing: border-box;
  border-radius:15rpx;
}

