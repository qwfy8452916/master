page{
  height: 100%;
}
.pagebox{
  position: relative;
  padding-bottom: 0;
  height: 90%;
}
.userinfo{
  background: -webkit-linear-gradient(left, #fa5353, #ee1e1e);
  background: -o-linear-gradient(left,#fa5353, #ee1e1e);
  background: -moz-linear-gradient(left,#fa5353,#ee1e1e);
  background: -ms-linear-gradient(left,#fa5353,#ee1e1e);
  padding: 80rpx 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userinfo-l{
  width: 59%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.userinfo-r{
  background: rgba(255,255,255,0.3);
  background: -webkit-linear-gradient(left,rgba(255, 255, 255, 0.3),rgb(255, 255, 255, 0.1));
  background: -moz-linear-gradient(left,rgba(255,255,255,0.3) 0%,rgba(255,255,255,0.1) 100%); /*FireFox*/
  background: -o-linear-gradient(left,rgba(255,255,255,0.3) 0%,rgba(255,255,255,0.1) 100%);  /* Opear */
  background: -ms-linear-gradient(left,rgba(255, 255, 255, 0.3),rgba(255,255,255,0.1)); /*IE10ÂèäIE10+*/
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #ffffff;
  border-radius: 50px 50px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-left: 20rpx;
}
.userimg{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}  
.userimg .userimg-img{
  display: block;
  width: 100%;
  height: 100%;
}
.username{
  font-size: 35rpx;
  font-weight:bold;
  color: #fff;
  width: 60%;
  text-align: left;
}
.mybtnbox{
  width: 90%;
  margin: 35rpx auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 5px;
}
.mybtnbox-btn{
  width: 25%;
  text-align: center;
  border-right: 0.5px solid #e5e5e5;
}
.mybtnbox-btn:last-child{
  border-right: none;
}
.mybtnbox-name{
  font-size: 30rpx;
  color: #666666;
}
.mybtnbox-img image{
  display: block;
  width: 50%;
  margin: 0 auto;
}
.mylistbox{
  background: #fff;
  margin-bottom: 20rpx;
}
.mylistbox-li-name{
  font-size: 28rpx;
  color: #666666;
}
.mylistbox-li-img{
  display: block;
  width: 12%;
  margin-right: 15rpx;
}
.mylistbox-li{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 15rpx;
  border-bottom: 0.5px solid #e5e5e5;
}
.mylistbox-li-left{
  width: 70%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.mylistbox-li-bg{
  display: block;
  width: 15rpx;
  height: 25rpx;
}
.mylistbox .mylistbox-li:last-child{
  border-bottom: none;
}
.ye-img{
  display: block;
  width: 20rpx;
  height: 25rpx;
}