/* search.wxss */
page{
  font-family: "PingFang SC","Helvetica Neue",Helvetica,"Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
}
.search-page{
  overflow: hidden
}
.search-box{
  width: 90%;
  height: 70rpx;
  margin: 0 auto;
  line-height: 70rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.search-box .section{
  width: 85%;
  height: 70rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
  float: left;
}
.search-icon{
  width: 55rpx;
  height: 55rpx;
  float: left;
  margin-top: 7.5rpx;
  margin-left: 20rpx;
}
.seach-input{
  margin-top:10rpx;
  margin-left:80rpx;
}
.search-icon image{
  width: 100%;
  height: 100%;
}
.hot-content{
  width: 90%;
  height: auto;
  margin: 0 auto;
  margin-top: 20rpx;
  overflow: hidden;
}
.search-clear{
  float: right;
  font-size: 34rpx;
}
.search-hot{
  border-top:1px solid #d3d3d3;
  display: none;
}
.hot-tit{
  color: #b8b8b8;
  font-size: 34rpx;
}
button{
  display:inline-block;
  font-size:28rpx;
  color:#333;
  float:left;
  margin-right:10rpx;
  margin-top:20rpx;
  background: #fff;
}

