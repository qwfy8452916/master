  height: 100%;
}
.comment_body{
  margin-left: 57rpx;
  font-size: 30rpx;
  color: #333;
  margin-top: 8rpx;
  margin-bottom: 30rpx;
}
.comment_box{
  width: 100%;
  height: 120rpx;
  background: #e6e6e6;
  overflow: hidden;
  position: fixed;
  left: 0;
  bottom: 0;
}
.comment_tip{
  height: 300rpx;
  font-size: 34rpx;
  text-align: center;
  color: #b8b8b8;
}
.comment_input{
  width: 90%;
