/* detail_play.wxss */
.play_box{
  width: 100%;
  height: 420rpx;
  position: relative;
}
.play_box video{
  width: 100%;
  height: 420rpx;
}
.play_info scroll-view{
  height: 666rpx;
}
.info_box{
  width: 90%;
  height: auto;
  margin: 0 auto; 
}
.info_tit{
  font-size:34rpx;
  line-height:34rpx;
  margin-top:20rpx;
  height:34rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.teacher{
  overflow: hidden;
  border-bottom: 1px solid #d4d4d4;
}
.teacher_info{
  margin-top: 20rpx;
  overflow: hidden
}
.teacher_info .teacher_img{
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  border: 1px solid #f2f2f2;
  margin-right: 10rpx;
}
.teacher_info .teacher_img image{
  width: 100%;
  height: 100%;
}
.teacher_name{
  font-size: 28rpx;
  color: #666;
  float: left
}
.teacher_about{
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 28rpx;
  color: #b8b8b8;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}
.share{margin-right: 30rpx;}
.teacher_icon image{
  width: 36rpx;
  height: 100%;
  display: block;
  float: left;
  margin-right: 8rpx;
}
.teacher_icon text{
  line-height: 28rpx;
  color: #b8b8b8;
  font-size: 28rpx;
  float: left;
}
button.teacher_icon{
  height: 28rpx;
  width: 100rpx;
  display:inline-block;
  padding: 0;
  border-color: #fff;
  border: 0 !important;
  outline: none;
  background: #fff;
}
button {
position:relative;
display:block;
border-radius:0;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
background-color:#fff;

}

button::after {
content:" ";
width:200%;
height:200%;
position:absolute;
top:0;
left:0;
border:0;
-webkit-transform:scale(1);
transform:scale(1);
-webkit-transform-origin:0 0;
transform-origin:0 0;
box-sizing:border-box;
border-radius:0 !important;
}

.intro{
  width: 100%;
  height: auto;
  overflow: hidden;
  border-bottom: 1px solid #d4d4d4;
}
.intro .intro_tit{
  font-size: 34rpx;
  line-height: 34rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  overflow: hidden
}
.intro_content{
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #666;
}
/*comment评论  */
.comment{
  width: 100%;
  height: auto;
  overflow: hidden;
}
.comment .comment_tit{
  font-size: 34rpx;
  line-height: 34rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.comment_item{
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
  border-bottom: 1px solid #d4d4d4;
}
.comment_item:last-child{
  border-bottom: 0;
}
.comment_top{
  font-size: 26rpx;
  overflow: hidden;
}
.comment_img{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 12rpx;
}
.comment_img image{
  width: 100%;
  height: 100%;
}
.comment_img_name{
  line-height: 45rpx;
  color: #0ebeff;
}
.comment_icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  /* background: url() no-repeat;
