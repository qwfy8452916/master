/* company_det.wxss */

.fl {
    float: left;
}

.fr {
    float: right;
}

.red {
    color: #ff5353;
}

.head {
    width: 100%;
    height: 400rpx;
    position: relative;
}
.scroll-view-box{
    height: 1500rpx;
}
.big-img {
    width: 100%;
    height: 100%;
}

.head-main {
    width: 100%;
    height: auto;
    position: absolute;
    left: 0;
    top: 35rpx;
}

.headd-info {
    width: 90%;
    height: 210rpx;
    margin: 0 auto;
}

.logo-box {
    width: 166rpx;
    height: 112rpx;
    position: relative;
    margin: 0 auto;
}

.bg-img {
    width: 100%;
    height: 100%;
}

.logo-img {
    width: 126rpx;
    height: 64rpx;
    position: absolute;
    left: 22rpx;
    top: 20rpx;
}

.company-name {
    font-size: 30rpx;
    line-height: 30rpx;
    text-align: center;
    margin-top: 15rpx;
    color: #333;
}

.item-info {
    float: left;
}

.item-info text {
    font-size: 26rpx;
}

.item-info text:first-child {
    color: #333;
}

.good {
    margin-left: 100rpx;
}

.trust {
    margin-left: 30rpx;
}

.trust text:last-child {
    font-size: 22rpx;
}

.wrap {
    width: 100%;
    overflow: hidden;
    border-bottom: 1px solid #f5f5f5;
}

.wrap .wrap-main {
    width: 94%;
    margin: 0 auto;
    margin-bottom: 30rpx;
}

.introduce, .server, .zxanli {margin-top: 32rpx;}
.zxanli{border: none;}
.zxanli .wrap-main {margin-bottom: 0;}
.head-company {width: 100%;height: 40rpx;}

.com-title {
    font-size: 40rpx;
    line-height: 40rpx;
    font-weight: bold;
    color: #333;
    margin-left: 20rpx;
    float: left;
}

.com-info {
    width: 100%;
    font-size: 32rpx;
    color: #333;
    margin-top: 30rpx;
    text-align: justify;
}

.img-icon {
    width: 40rpx;
    height: 40rpx;
    float: left;
}

.img-icon image {
    width: 100%;
    height: 100%;
}

.anli-item{
    width: 100%;
    border-bottom: 20rpx solid #f5f5f5;
    overflow: hidden;
}

.anli-item:last-child{
    border-bottom: 0;
}
.anli-box{
    width: 94%;
    margin: 0 auto;
    margin-top: 30rpx;
}

.anli-img{width: 100%;height: 400rpx;}
.anli-img image{width: 100%;height: 100%;}
.anli-info text{font-size: 28rpx;line-height: 90rpx;color: #333;}
.anli-info .fl{width: 180rpx;height: 90rpx;overflow: hidden;}
.anli-info .fr text{padding: 0 20rpx;border-right:1px solid #999999; }
.anli-info .fr text:last-child{padding-right:0;border: 0;}
.star{
    width: 24rpx;
    height: 24rpx;
    display: inline-block;
    margin-right: 10rpx;
}
.star image{width: 100%;height: 100%;}