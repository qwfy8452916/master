/* pages/comments/comments.wxss */
.clearfix:after {
    content: "";
    display: block;
    clear: both;
}
.li{
  padding: 34rpx 20rpx 20rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.li .info image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  float: left;
}
.li .info .name {
  float: left;
  height:110rpx;
  line-height:110rpx;
  width:300rpx;
  overflow:hidden;
  margin-left: 10rpx;
  font-size: 30rpx;
  color: rgb(51, 51, 51);
}
.li .info .time {
  float: right;
  line-height:110rpx;
  font-size:24rpx;
  color:rgb(102,102,102);
}
.comment {
  font-size:24rpx;
  color:rgb(102,102,102);
  word-wrap:break-word;
}
.limit-line{
  text-align: center;
  color: #999;
  line-height: 3;
}