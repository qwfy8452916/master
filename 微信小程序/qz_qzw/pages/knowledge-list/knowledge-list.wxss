/* pages/knowledge-list/knowledge-list.wxss */
/**index.wxss**/
 @import "../company_fadan/company_fadan.wxss";
.mr6{margin-right: 6rpx;}
.c999{color: #999;position: relative;height: 50rpx;}
.watch{position: absolute;bottom: 0;}

page{
  font-size: 26rpx;
}

.search-ret .item{
  padding: 30rpx 20rpx;
  height: 200rpx;
  border-bottom: 1px solid #E6E6E6;
}

.search-ret .thumb{
  width: 240rpx;
  height: 180rpx;
  float: left;
  margin-right: 24rpx;
}

.search-ret .main{
  overflow: hidden;
}

.search-ret .main .desc{
  font-size: 28rpx;
  color: #333;
  display: block;
  margin: 0 0 20rpx 0;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
}
.search-ret .main .subtitle{
  font-size: 24rpx;
  color: #999;
  display: block;
  margin: 0 0 20rpx 0;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}
.search-ret .main .text{
  color: #666;
  font-size: 28rpx;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}

.float-icon{
  position: fixed;
  right: 0;
  bottom: 100rpx;
  width: 131rpx;
  height: 133rpx;
}

.float-icon image{
  width: 100%;
  height: 100%;
}

.fadan{
  margin-bottom: 40rpx;
}

.fadan,.fadan image{
  height: 200rpx;
}

.fadan image{
  width: 100%;
}

.limit-line{
  text-align: center;
  color: #999;
  line-height: 3;
}

.without-data{
  padding: 90rpx 0;
}

.without-data .tips{
  color: #333;
  font-size: 30rpx;
  text-align: center;
}

.without-data .gray-bar{
  border-top: 20rpx solid #F5F5F5;
}

.without-data .tips-img{
  width: 137rpx;
  height: 143rpx;
  display: block;
  margin: 60rpx auto 90rpx;
  overflow: hidden;
}

.without-data .get-scheme{
  padding: 30rpx;
  position: relative;
}

.without-data .get-scheme image{
  width: 100%;
  height: 160rpx;
}

.without-data .get-scheme .num{
  background-color: white;
  position: absolute;
  top: 113rpx;
  left: 276rpx;
  width: 280rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 26rpx;
  font-size: 22rpx;
}

.sticky{
  position: sticky;
  top: 0;
  z-index: 999;
}
.float-icon navigator{width: 100%;height: 100%;}