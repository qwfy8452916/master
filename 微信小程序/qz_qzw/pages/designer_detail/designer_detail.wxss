/* pages/designer_detail/designer_detail.wxss */
@import "../company_fadan/company_fadan.wxss";
.head .banner image {
  width: 100%;
  height: 227rpx;
}
.head .logo{position: relative;height: 50rpx;}
.head .logo image {
  width: 110rpx;
  height: 110rpx;
  position: absolute;
  top: -70rpx;
  left: 25rpx;
  border-radius: 50%;
}
.head .info {
  padding-left: 24rpx;
}
.head .info .msg {padding-top: 18rpx;padding-bottom: 30rpx;border-bottom: 1px solid #f5f5f5;}
.head .info .msg .name{font-size: 30rpx;margin-right: 22rpx;}
.head .info .msg .job{font-size: 28rpx;color: #ff5353;border: 1px solid #ff5353;padding: 6rpx;margin-right: 32rpx;border-radius: 10rpx;}
.head .info .msg .time{font-size: 28rpx;color: #999;}
.head .info .intro {font-size: 30rpx;padding-bottom:24rpx;}
.head .info .intro .style text{font-size: 28rpx;color: #999;margin-bottom: 16rpx;}
.head .info .intro .idea text{font-size: 28rpx;color: #999;margin-bottom: 24rpx;}
.block {
  width: 100%;
  background: #f5f5f5;
  height: 20rpx;
}
.example {
  padding: 0 24rpx;
}
.example .h3 {
  margin-top: 40rpx;
  font-weight: bold;
}
.li {
  padding-top: 24rpx;
  height: 556rpx;
  border-bottom: 1px solid #f5f5f5;
}
.li .img image {
  width: 100%;
  height: 418rpx;
}
.li .l-info {position: relative;}
.li .l-info .l-text{margin-bottom: 22rpx;height: 40rpx;}
.li .l-info .l-text .dizhi{font-size: 26rpx;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 1;overflow: hidden;width: 550rpx;float: left;}
.li .l-info .l-text .member{font-size: 22rpx;color: #999;float: right;}
.li .l-info .l-text .member text{color: #ff5353;}
.li .l-info .l-msg{font-size: 24rpx;color: rgb(153, 153, 153)}
.li .l-info .l-msg .mianji {margin-right: 15rpx;}
.li .l-info .l-msg .money {margin-right: 15rpx;margin-left: 15rpx;}
.li .l-info .l-msg .leixing {margin-left: 15rpx;}

.li .l-info .get{position: absolute;top: 48rpx;right: 0;width: 140rpx;height: 45rpx;color: #ff5353;border: 1px solid #ff5353;background:#fff;border-radius: 10rpx;text-align: center;line-height: 45rpx;font-size: 24rpx;}

.empty-img {
    width: 213rpx;
    height: 247rpx;
    margin: 0 auto;
    margin-top: 50rpx;
}
.empty-img image {
    width: 213rpx;
    height: 247rpx;
}
.empty-tip {
    font-size: 30rpx;
    text-align: center;
    margin-top: 20rpx;
}