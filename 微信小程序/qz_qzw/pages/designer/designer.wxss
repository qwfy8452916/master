/* pages/designer/designer.wxss */
@import "../company_fadan/company_fadan.wxss";
.designer-list .li {
  width: 100%;
  height: 245rpx;
  box-sizing:border-box; 
  padding: 66rpx 20rpx 48rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.designer-list .li .img {float: left;margin-right: 40rpx;}
.designer-list .li .img image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.designer-list .li .info{float: left;position: relative;width: 560rpx;}
.designer-list .li .info .name{font-size: 28rpx;margin-bottom: 10rpx;line-height:28rpx;padding:4rpx 0;}
.c-name{
  display:inline-block;
  height:25px;
  line-height:25px;
  font-size:32rpx;

}
.designer-list .li .info .name .job{
  border:1px solid #fb8f2a;
  padding:4rpx;
  color:#fb8f2a;
  border-radius:10rpx;
  margin-left:16rpx;
  width:110rpx;
  text-align:center;
  font-size:26rpx;
  box-sizing:border-box;
}
.designer-list .li .info .idea{
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;  
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 400rpx;
  overflow: hidden;
}
.designer-list .li .info .style{font-size: 24rpx;color: #666;width: 480rpx;overflow: hidden;  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.designer-list .li .info .detail{font-size: 24rpx;color: #ff5353;float:right;margin-top: -30rpx;}
.designer-list .li .info .find{position: absolute;top:0rpx;right: 0;width: 170rpx;height: 55rpx;color: #fff;line-height: 55rpx;text-align: center;background: #ff5353;font-size: 24rpx;border-radius: 10rpx;}
.limit-line{
  text-align: center;
  color: #999;
  line-height: 3;
}