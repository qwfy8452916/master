.recommentkz .tuijian_title{font-size: 36rpx;color: #333;padding-left: 6rpx;font-weight: bold;}
.recommentkz .listtj{width: 100%;margin-top: 30rpx;overflow: hidden;}
.recommentkz .listtj .tuwen{width: 100%;}
.tuwen .left_tu{width: 260rpx;height: 195rpx;display: inline-block;float: left;position:relative;}
.tuwen .left_tu .bofniu{width: 70rpx;height: 70rpx;position:absolute;left: 0;right:0;top: 0;bottom:0;margin:auto;}
.tuwen .left_tu .bofniu image{width: 100%;height: 100%;}
.tuwen .left_tu image{width: 100%;height: 100%;}
.tuwen .right_ms{margin-left: 20rpx;display: inline-block;width: calc(100% - 280rpx);float: right;height: 195rpx;
