.tuwen .right_ms .ms_title{font-size: 30rpx;color: #333;float: left;}
.tuwen .right_ms .yulansc{width:100%;overflow: hidden;position: absolute;bottom: 0;left: 0;}
.tuwen .right_ms .yulansc .lookkz{float: left;font-size:26rpx;color: #999; }
.tuwen .right_ms .yulansc .collectionkz{float: right;font-size: 24rpx;}
