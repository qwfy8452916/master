/**index.wxss**/
 @import "../company_fadan/company_fadan.wxss";
page,view,text,input{box-sizing: border-box; margin: 0rpx; padding: 0rpx;}
.mr6{margin-right: 6rpx;}
.c999{color: #999;}

page{
  font-size: 26rpx;
}

.fadan{
  margin-bottom: 40rpx;
}

.fadan,.fadan image{
  height: 200rpx;
}

.fadan image{
  width: 100%;
}

.article-detail{
  padding: 30rpx 20rpx 0 20rpx;
}

.article-detail .title{
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.article-detail .date{
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.article-detail .content{
  margin-bottom: 40rpx;
}

.recommend{
  padding: 0 20rpx 0 20rpx;
  margin-bottom: 120rpx;
}

.recommend .title{
  border-left: 6rpx solid #FF5353;
  height: 36rpx;
  line-height: 36rpx;
  padding-left: 6rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.recommend .list{
  padding-top: 30rpx;
}

.recommend .item{
  margin-bottom: 30rpx;
  height: 170rpx;
}

.recommend .thumb{
  width: 260rpx;
  height: 170rpx;
  float: left;
  margin-right: 24rpx;
}

.recommend .main{
  overflow: hidden;
}

.recommend .main .desc{
  font-size: 30rpx;
  color: #333;
  display: block;
  margin: 24rpx 0 40rpx 0;
}

.article-action{
  position: fixed;
  left: 0;
  bottom:0;
  width : 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1px solid #E6E6E6;
  background-color: white;
}

.article-action .action , .article-action .pop{
  display: inline-block;
}

.article-action .action{
  width: 60%;
}

.article-action .pop{
  width: 40%;
  background-color: #FF5353;
  text-align: center;
  color: white;
  vertical-align: top
}

.article-action .collect,.article-action .approve,.article-action .share{
  width: 33.33%;
  display: inline-block;
  text-align: center;
  color: #FF5353;
}

.article-action .approve{
  position: relative;
}

.article-action .approve-num{
  position: absolute;
  background-color: #FF5353;
  color: white;
  padding: 5rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  border-radius: 50%;
}

.share-btn{
  display:inline;
  font-size:26rpx;
  padding:0;
  margin:0;
  color: #FF5353;
  background-color: transparent;
}

.share-btn::after{ 
  border: none; 
}