/* pages/setmessage/setmessage.wxss */
page{background: #f6f6f6;}
.msgbg{
  height: 65px;
  background: #fff;
  padding: 0px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 1px;
  margin-bottom: 20rpx;
}

.title{
  font-size: 16px;
  color: #333;
  margin-bottom: 5px;
}
.hint{
  font-size: 12px;
  color: #999;
}
.msgbtn{
  width: 65px;
  height: 30px;
  font-size: 16px;
  line-height: 30px;
  text-align: center;
  border-radius: 30px;
}
.cancel{
  color: #999;
  border: 1px solid #999;
}
.ensure{
  color: #fff;
  background: -webkit-linear-gradient(left,#487ae9 0%,#503fed 80%);
}
.authmask{
  position: fixed;
  width: 100%;
  top: 0px;
  bottom: 0px;
  background: rgba(0,0,0,0.6);
  z-index: 1;
}
.authbg{
  width: 80%;
  border-radius: 5px;
  background: #fff;
  margin: 120px 10% 0px 10%;
}
.authtitle{
  height: 44px;
  font-size: 18px;
  color: #666;
  line-height: 44px;
  text-align: center;
  border-bottom: 1px solid rgba(0,0,0,0.1);
}
.authhint{
  line-height: 22px;
  padding: 10px 15px;
}
.authClick{
  display: flex;
}
.authbtn{
  width: 100%;
  height: 39px;
  font-size: 16px;
  line-height: 39px;
  margin-top: 20px;
}
.ensureAuth{
  color: #fff;
  border-radius: 0px 0px 5px 5px;
  background: #1aad19;
}
.closemsg{
  font-size: 16px;
  height: 100px;
  text-align: center;
  line-height: 100px;
}
.msgclick{
  display: flex;
}
.msgensure,.msgcancel{
  font-size: 16px;
  color: #999;
  width: 50%;
  height: 44px;
  background: #fff;
}
