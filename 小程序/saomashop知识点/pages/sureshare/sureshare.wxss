/* pages/sureshare/sureshare.wxss */
page{
  width: 100%;
  padding: 0 8%;
  background: #f6f6f6;
  box-sizing: border-box;
}
.sharemsbox{
  width: 100%;
  background: #fff;
  padding: 4%;
  box-sizing: border-box;
  background: #fff;
  margin-top: 66rpx;
}
.sharemsbox .sharemsbox_title{
  color: #2B2D30;
  font-size: 36rpx;
}
.sharemsbox .shareimg{
  width: 100%;
  height: 450rpx;
  margin-top: 30rpx;
}
.shareimg image{
  width: 100%;
  height: 100%;
}

.tipsbox{
  margin-top: 66rpx;
  border-top: 1px dashed #dedbdc;
  padding-top: 35rpx;
}
.tipsbox .tipsboxbt{
  color: #2B2D30;
  font-size: 28rpx;
  margin-left: 30rpx;              
}
.tipsbox .tipscontent{
  color: #888C8F;
  font-size: 24rpx;
  margin-left: 70rpx;
  margin-top: 20rpx;
  width: 68%;
}
.sharebtn{
  width: 100%;
  background: #FF9700;
  color: #fff;
  font-size: 36rpx;
  text-align: center;
  padding:8rpx 0;
  border-radius: 40rpx;
  margin-top: 50rpx;
}
.edittitlebtn{
  color: #FF9700;
  font-size: 36rpx;
  padding: 25rpx 0;
  border-radius: 40rpx;
  border: 1px solid #c7a35b;
  text-align: center;
  width: 100%;
  margin-top: 30rpx;
}

.shadowbox{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  background: rgba(0,0,0,0.7);
}
.inputbox{
  width: 78%;
  background: #fff;
  font-size: 28rpx;
  overflow: hidden;
  position: absolute;
  left: 0;
  right: 0;
  top: 20%;
  margin:auto;
}
.inputcontent{
  margin-top: 70rpx;
  width: 100%;
  padding: 0 6%;
  box-sizing: border-box;
  overflow: hidden;
}
.btnboxtc{
  width: 100%;
  border-top: 1px solid #e7e6e9;
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}
.btnboxtc .btnniu{
  display: inline-block;
  align-items: center;
  width: 50%;
  text-align: center;
  padding: 25rpx 0;
  box-sizing: border-box;
}
.btnboxtc .cancelbtn{
  border-right: 1px solid #e7e6e9;
}