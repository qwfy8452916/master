/* pages/shareRecords/shareRecords.wxss */
page{
    background:#f6f6f6;
    height: 100%;
}
.shareContent{
    background: #eee;
    /* padding-top:10px;
    margin-top: 30px; */
}
.shareItem{
    margin-bottom: 10px;
    background: #fff;
    font-size: 14px;
}
.item1{
    display: flex;
    font-size: 14px;
    justify-content: space-between;
    padding: 10px 15px;
    border-top: 1px #eee solid;
    background: #fff7e4;
}
.item2{
    padding: 12px 15px;
    border-top: 1px #eee solid;
}
.item2_1{
    color: #FF9700;
    display: flex;
    align-items: center;
    margin-bottom: 24px;
}
.item2_2{
    display: flex;
}
.data1{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;

}
.numstyle{
    font-size: 18px;
    color: #10BBBB;
}
.numword{
    color: #888C8F;
    font-size: 12px;
}
.item3{
    border-top: 1px #eee solid;
    padding: 15px;
}
.item3_1{
    display: flex;
    align-items: center;
    margin-bottom: 12px;
}
.item3_1:last-child{
    margin-bottom: 0;
}
.num{
    flex:1;
}
.visit{
    width: 60px;
    margin-left: 5px;
}
.view{
    color: #EE1E1E;
}
.item4{
    border-top: 1px #eee solid;
    padding: 15px;
    font-size: 12px;
    color: #888C8F;

}
