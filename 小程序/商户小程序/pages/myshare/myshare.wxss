/* pages/myshare/myshare.wxss */
page{
  border-top: 1rpx solid #e5e5e5;
  background: #f4f4f4;
}
.wrap{
  width: 100%;
  padding: 30rpx 4%;
  box-sizing: border-box;
}
.iconweixin{
  color: #24db5a;
}
.itembox{
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #2B2D30;  
  margin-bottom: 20rpx;
}
.title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #eaeaea;
  padding: 20rpx 0;
}
.title .title_bt{
  font-size: 32rpx;
  color: #2B2D30;
  position: relative;
}

.title .title_btdx{
  font-size: 20rpx;
  color: #82C2F1;
  padding: 20rpx 0;
  box-sizing: border-box;
  position: relative;
}
.title .title_btdx::before{
  content: "";
  width: 20rpx;
  height: 1rpx;
  background: #82f1e8;
  position: absolute;
  top: 32rpx;
  left: -26rpx;
}
.title .title_btdx::after{
  content: "";
  width: 20rpx;
  height: 1rpx;
  background: #82f1e8;
  position: absolute;
  top: 33rpx;
  right: -23rpx;
}
.shangcti{
  color:#888FA1;
  font-size:  24rpx;
}
.xieyistyle{
  color:#edad46 !important;
}
.reward{
  margin-top: 25rpx;
  font-size: 28rpx;
