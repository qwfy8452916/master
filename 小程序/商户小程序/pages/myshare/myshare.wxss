}
.reward .reward_bfb{
  margin-right:45rpx;
}
.sharebox{
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #FF9700;
  text-align: right;
  margin-bottom: 20rpx;
}
.sharebox .shareitem{
  margin-right: 40rpx;
  padding: 15rpx 25rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  background: #fdf6eb;
}  
.iconweixin{
  margin-right: 10rpx;
}
.haibaoshare{
  display: inline-block;
}
.haibaoshare .hbfxtext{
  display: inline-block;
}
.zfpyq{
  margin-right: 10rpx;
