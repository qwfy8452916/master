page{
  background:#f2f2f5; 
}
.wrap{
  width: 100%;
  padding: 20rpx 3%;
  box-sizing: border-box;
}
.box{
  background: #fff;
  width: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.title{
   width: 100%;
   padding:25rpx 30rpx; 
   box-sizing: border-box;
   font-size: 32rpx;
   color: #2B2D30;
   display: flex;
   align-items: center;
}
.title .titlecol{
  display: inline-block;
  width: 8rpx;
  height: 30rpx;
  background: #10bbbb;
  border-radius: 30rpx;
  margin-right: 10rpx;
}
.section{
  width: 100%;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  font-size: 28rpx;
  border-top: 1px solid #e9eaea;
}
.subTitle{
  margin-right: 40rpx;
