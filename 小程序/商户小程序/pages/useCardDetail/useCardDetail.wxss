.regionRow{
  width: 100%;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #e9eaea;
  display: flex;
  font-size: 28rpx;
}
.regionRowTitle{
  margin-right: 40rpx;
