<!--pages/shareRecords/shareRecords.wxml-->
<view class="share">
    <!-- <view class="menu">
        <text class="menu1">分享记录</text>
        <text class="menu1">分享访问记录</text>
        <text class="menu1">分享订单记录</text>
    </view> -->
    <view class="shareContent">
        <view class="shareItem" wx:for="{{shareData}}" wx:key>
            <view class="item1">
                <text style="color:#333">分享记录ID：{{shareId}}</text>
            </view>
            <view class="item2">
                <view class="item2_2">
                    <view class="data1">
                        <text class="numstyle">{{item.orderCount}}</text>
                        <text class="numword">订单数量</text>
                    </view>
                    <view class="data1">
                        <text class="numstyle">{{item.orderAmount}}</text>
                        <text class="numword">订单金额</text>
                    </view>
                    <view class="data1">
                        <text class="numstyle">{{item.shareBonus}}</text>
                        <text class="numword">分享奖励总额</text>
                    </view>
                    <view class="data1">
                        <text class="numstyle">{{item.shareManageBonus}}</text>
                        <text class="numword">管理奖励总额</text>
                    </view>
                </view>
            </view>
            <view class="item3">
                <view class="item3_1">
                    <image style="width:13px;height:13px" src="../../img/eye.png" />
                    <text class="visit">访问人ID</text>
                    <text class="num">{{item.userId}}，{{item.userName}}</text>
                </view>
                <view class="item3_1">
                    <image style="width:13px;height:13px" src="../../img/order.png" />
                    <text class="visit">售出商品数量</text>
                    <text class="num">{{item.prodSaleCount}}</text>
                </view>
            </view>
            <view class="item4">
                访问时间 {{item.visitTime}}
            </view>
        </view>
    </view>
    <view class="none" style="padding:30px 30px;font-size:14px;color:#ccc" wx:if="{{ifshow}}">
        暂无访问记录
    </view>
</view>
