
page{
  border-top: 1rpx solid #e5e5e5;
}
.title{
  font-size: 32rpx;
  color: #2B2D30;
  width: 100%;
  padding: 25rpx 4%;
  box-sizing: border-box;
}
.scrollbox{
  overflow: hidden;
  position: fixed;
  top: 90rpx;
}
.proditem{
  width: 100%;
  padding:20rpx 4%; 
  box-sizing: border-box;
  vertical-align: top;
  border-bottom: 1px solid #eaeaea;
}
.selectproditem{background: #fff4e5 !important;}

.radiobox{
  display: inline-block;
  width: 10%;
  vertical-align: top;
  line-height: 100rpx;
  
}


.prodpic{
  width:15%;
  height: 100rpx; 
}
.prodtext{
  width: 75%;
  display: inline-block;
  font-size: 28rpx;
  color: #2B2D30;
  vertical-align: top;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.prodtext_title{
  vertical-align: top;
}
.prodtext_price{
  margin-top: 30rpx;
  color: #EE1E1E;
}


.confirmbtn{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #bbbec5;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
.selectconfirmbtn{background: #ff9700 !important;}


/* 海报弹窗 */

.bkbeijing{
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin:auto;
  width: 100%;
  height: 100%;
}
.wraphaibao{
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  width: 70%;
}
.iconguanbi{
  position: absolute;
  color: #c1c1c1;
  right: -60rpx;
  top: 46rpx;
  font-size: 46rpx;
  padding: 20rpx;
}
.picbox{
  overflow: hidden; 
  height: 772rpx;
  margin-top:100rpx; 
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.picbox .haibaopic{
  width: 100%; 
  height: 100%;
}

.btnpic{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size:32rpx;
  color: #fff;
  background:#FEB955; 
  border-radius:35rpx;
  margin-top: 40rpx;
}
.preview{
  background: #FE8C55;
}

