/* pages/channellink/channellink.wxss */
.linkbg{
  width: 100%;
  height: 100%;
  background: #fff;
}
.linkinfo{
  border-bottom: 1px solid rgba(0,0,0,0.1);
  padding: 10px 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.lefttop{
  display: flex;
  align-items: center;
  font-size: 16px;
  color: #333;
  line-height: 26px;
}
.leftbottom{
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #999;
}
.iconedit{
  width: 18px;
  height: 18px;
  margin-left: 6px;
}
.copylink{
  font-size: 12px;
  color: #ee1e1e;
  width: 80px;
}
.iconlink{
  width: 12px;
  height: 12px;
  margin: 0px 5px 0px 10px;
}
.iconright{
  width: 22px;
  height: 22px;
}
.linkadd{
  width: 100%;
  position: fixed;
  bottom: 0px;
  padding-bottom: 15px;
  z-index: 1;
}
.addbtn{
  font-size: 17px;
  color: #fff;
  text-align: center;
  background: #ee1e1e;
  line-height: 44px;
  margin: 0px 15px;
}
.addmask{
  position: fixed;
  width: 100%;
  top: 0px;
  bottom: 0px;
  background: rgba(0,0,0,0.7);
  padding: 120px 15%;
  z-index: 10;
}
.maskinfo{
  width: 62%;
  background: #fff;
  padding: 8px 4% 15px 4%;
}
.iconclose{
  width: 16px;
  height: 16px;
  float: right;
  margin-bottom: 10px;
}
.txttitle{
  width: 90%;
  font-size: 12px;
  height: 30px;
  background: #f0f0f0;
  margin-bottom: 8px;
  padding: 0px 5%;
}
.linktxt{
  font-size: 12px;
  color: #999;
}
.confirmbtn{
  width: 44%;
  line-height: 30px;
  font-size: 14px;
  color: #fff;
  text-align: center;
  background: linear-gradient(#fb8080, #ee1e1e);
  margin: 20px auto 0px auto;
}