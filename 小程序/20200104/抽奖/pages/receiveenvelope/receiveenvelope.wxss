page{
  background: #f6f6f6;
  padding: 25rpx 25rpx;
}
.width90{
  width: 90%;
  margin: 0 auto;
}
.bigbox{
  position: relative;
  padding-top: 90rpx;
  padding-bottom: 90rpx;
  border-radius: 15rpx;
  background: #fff;
}
.closeimg{
  display: block;
  width: 100%;
  height: 100%;
}
.colsebtn{
  position: absolute;
  z-index: 999;
  top: 10rpx;
  right: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.avatarimg{
  display: block;
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto 20rpx;
}
.avatarimg2{
  display: block;
  width: 76rpx;
  height: 76rpx;
  margin-right: 15rpx;
}
.font-money{
  text-align: center;
  font-size: 70rpx;
  color: #EE1E1E;
}
.font-money text{
  font-size: 28rpx;
  display: inline-block;
  margin-left: 15rpx;
}
.fonttext{
  text-align: center;
  font-size: 24rpx;
  color: #EE1E1E;
}
.fonttext2{
  font-size: 28rpx;
  color: #333333;
  margin-top: 97rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.libox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.li-r{
  width: 26%;
  font-size: 32rpx;
  color: #333333;
  text-align: right;
}
.li-l{
  width: 73%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.fonttext3{
  width: 60%;
  font-size: 28rpx;
  color: #999999;
}
.fonttext3 text{
  display: block;
  width: 100%;
}
.fonttext3 .fonttext3-name{
  font-size: 32rpx;
  color: #333333;
}
.fonttext4{
  text-align: center;
  font-size: 32rpx;
  color: #EE1E1E;
  margin-top: 75rpx;
  margin-bottom: 10rpx;
}
.fonttext5{
  text-align: center;
