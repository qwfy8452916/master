/* pages/restMoney/restMoney.wxss */
.restmoney{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to top,#EE1E1E,#FF5F5F);
    color: #fff;
    height: 200rpx;
}
.restmoney .restnum{
    text-align: center;
}
.restmoney .ablenum{
    font-size: 68rpx;
}
.goDraw{
    position: absolute;
    right: 50rpx;
    width: 150rpx;
    height: 200rpx;
    top: 0;
    bottom: 0;
    margin: auto;
    text-align: center;
    line-height: 200rpx;
}
.rpdetail{
    margin-top: 20rpx;
    color: #333;
    background: #fff;
}
.rptitle{
    height: 88rpx;
    line-height: 88rpx;
    padding-left: 30rpx;
}
.rpitems{
    border-top: 2rpx solid #E5E5E5;
    display: flex;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    align-items: center;
}
.rptype{
    font-size: 28rpx;
}
.rptime{
    font-size: 24rpx;
    color: #999999;
}
.rpmoney{
    font-size: 28rpx;
    color: #EE1E1E;
}
.rpleft{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.none{
    font-size: 28rpx;
    color: #ccc;
    text-align: center;
    margin-top: 50rpx;
}