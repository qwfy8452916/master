/* pages/user/user.wxss */
.infowrap{width: 100%;height: 415rpx;overflow: hidden;
 position: relative;box-sizing: border-box;}
image{width: 100%;height: 100%;}
.infowrap .portrait{width: 60rpx;height: 60rpx;border-radius: 50%;
position: absolute;top: 40rpx;left: 4%;background: #fff;}
.infowrap .nickname{color: #fff;font-size: 32rpx;position: absolute;
top: 48rpx;left: 110rpx;}
.infowrap .exitbtn{display: inline-block;padding: 10rpx 30rpx;box-sizing: border-box;
border-radius: 20rpx;background: #0058af;color: #fff;font-size: 24rpx;
text-align: center;position: absolute;top: 48rpx;right: 0;} 
.infowrap .bindbtn{display: inline-block;padding: 10rpx 30rpx;box-sizing: border-box;
border-radius: 20rpx;background: #0058af;color: #fff;font-size: 24rpx;
text-align: center;position: absolute;top: 48rpx;right: 158rpx;} 
.infowrap .getcash{color: #fff;font-size: 24rpx;position: absolute;
left: 4%;top: 170rpx;}
.infowrap .cash{color: #fff;font-size: 66rpx;font-weight: bold;
position: absolute;left: 4%;top: 208rpx;}
.infowrap .getcashbtn{color: #fff;font-size: 24rpx;padding: 10rpx 40rpx;
border-radius: 25rpx;border: 1px solid #fff;position: absolute;right: 4%;
top: 200rpx;}
.infowrap .getearnbtn{color: #fff;font-size: 24rpx;padding: 10rpx 18rpx;
border-radius: 25rpx;border: 1px solid #fff;position: absolute;right: 4%;
top: 290rpx;}
.infowrap .lookingcash{color: #fff;font-size: 24rpx;position: absolute;left: 4%;
top: 315rpx;}

.cashwrap{width: 100%;padding: 30rpx 0;text-align: center;
display: flex;}
.cashwrap .cashitem{flex-grow: 1;border-right: 1px solid #e5e5e5;}
.cashitem .cashitem_ms{color: #999;font-size: 24rpx;}
.cashitem .cashitem_jine{color: #333;font-size:30rpx;margin-top: 15rpx;}
.cashitem .iconfont{margin-right: 5rpx;}

.detailwrap{width: 100%;overflow: hidden;border-top: 20rpx solid #f6f6f6;
border-bottom: 20rpx solid #f6f6f6;}
.detailwrap .detailitem{width: 100%;padding:  25rpx 4%;box-sizing: border-box;
vertical-align: middle;overflow: hidden;border-bottom: 1px solid #e5e5e5;
font-size: 28rpx;}
.detailwrap .detailitem:last-child{border-bottom: none;}
.detailitem .leftalign{float: left;}
.detailitem .rightalign{float: right;}
.detailitem .leftalign .iconfont{color: #0066cc;margin-right: 10rpx;}

.bankwrap{overflow: hidden;width: 100%;padding: 30rpx 4%;box-sizing: border-box;
}
.bankwrap .banktitle{padding-bottom: 25rpx;box-sizing: border-box;font-size: 28rpx;}
.banktitle .edit{color: #0066cc;}
.bankwrap .banktitle .iconfont{color: #0066cc;margin-right: 10rpx;}
.cardbox{border: 2rpx dashed #ddd;border-radius: 20rpx;height: 305rpx;text-align: center;
position: relative;}
.addcard{color:#999;font-size: 28rpx;vertical-align: middle;
display: inline-block;position: absolute;top: 0;bottom: 0;left: 0;right: 0;
margin: auto;height: 40rpx;line-height: 40rpx;}
.addcard .iconicon02{position: relative;top: 3rpx;margin-right: 15rpx;}
.leftfloat{float: left;}
.rightfloat{float: right;}
.bankinfoitem{padding: 25rpx 0;box-sizing: border-box;font-size: 28rpx;
text-align: left;border-bottom: 1rpx solid #f4f4f4;}
.bankinfoitem .infotitle{color: #adadad;margin-right: 8rpx;}
 

