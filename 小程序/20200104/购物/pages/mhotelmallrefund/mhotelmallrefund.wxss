.list-view{
  border-bottom: 0.5px solid #e5e5e5;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.list-view-img{
  width: 180rpx;
  height: 180rpx;
}
.list-view-img image{
  display: block;
  width: 100%;
  height: 100%;
}

.list-viewR{
  width: 70%;
}
.list-viewR-top{
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 10rpx;
}
.list-viewR-name{
  font-size: 30rpx;
  color: #333333;
  width: 85%;
}
.list-viewR-num{
  font-size: 27rpx;
  color: #999999;
}
.list-viewR-btm{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.list-viewR-prodAmount{
  font-size: 30rpx;
  color: #EE1E1E;
}
.list-viewR-btn{
  font-size: 30rpx;
  color: #999999;
  width: 25%;
  line-height: 50rpx;
  border: 0.5px solid #e5e5e5;
  border-radius: 5px;
  text-align: center;
}
.list-viewR-font{
  font-size: 30rpx;
}
.font-all{
  font-size: 30rpx;
  color: #999999;
}

.formbox-li text{
  display: block;
  width: 28%;
  font-size: 30rpx;
  color: #999999;
}
.formbox-li input,.formbox-li textarea{
  display: block;
  width: 80%;
  font-size: 30rpx;
  color: #999999;
}

.refund-top{
  background: #FF9700;
  color: #fff;
  font-size: 30rpx;
}
.refund-top text{
  display: block;
  font-size: 40rpx;
  margin-bottom: 10rpx;
}
.font-tk{
  font-size: 30rpx;
  color: #333333;
}
.font-od{
  font-size: 30rpx;
  color: #999999;
  line-height: 60rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.font-od text:first-child{
  width: 24%;
}
.font-od text:last-child{
  width: 76%;
}
.kfbtn{
  background: #fff;
  border-top: 0.5px solid #e5e5e5;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #10BBBB;
}
.kfbtn image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.refund-top2{
  text-align: center;
  padding-bottom: 50rpx;
}
.successimg{
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 20rpx;
}
.font-success{
  display: block;
  font-size: 35rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.font-success2{
  font-size: 30rpx;
  color: #999999;
}
.flexbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flexbox text:last-child{
  width: auto;
}
.submitbtn2{
  display: block;
  position: fixed;
  z-index: 9;
  bottom: 0;
  left: 0;
  right: 0;
  font-size: 30rpx;
  line-height: 100rpx;
  border-radius: 0;
  background: #cecece;
  color: #fff;
  text-align: center;
}