<view class="redbag-bg" wx:if="{{showtype == true}}">
  <view wx:if="{{redbag_type == 0 || redbag_type == 2}}" class="redbag-box">
    <image wx:if="{{redbag_type == 0}}" class="redbag-box-bgimg" mode="widthFix" src="cloud://hotelconsumption-e23cl.686f-hotelconsumption-e23cl-1300251335/redbag-bg.png"></image>
    <image wx:elif="{{redbag_type == 2}}" class="redbag-box-bgimg" mode="widthFix" src="cloud://hotelconsumption-e23cl.686f-hotelconsumption-e23cl-1300251335/redbag-bg2.png"></image>
    <view class="closebtn" bindtap="closefun"></view>
    <view class="redbag-info" bindtap="openfun">
      <image class="share-img" src="{{shareUserAvatarUrl}}"></image>
      <block wx:if="{{redbagtype == 1}}">
        <view class="share-name">{{shareUserNickName}}</view>
        <view class="font-text1">给你发了一个红包</view>
      </block>
      <block wx:else>
        <view class="share-name">恭喜您！</view>
        <view class="font-text1">获得一个返现红包</view>
      </block>
      <view class="font-text2">
        <block wx:if="{{redbag_type == 0}}">红包返现</block>
        <block wx:elif="{{redbag_type == 2}}">手慢了，红包派完了</block>
      </view>
    </view>
  </view>
  <view wx:else class="redbag-box2-bg">
    <scroll-view scroll-y style="height: 100%;">
      <view class="redbag-box2">
        <view class="closebtn2" bindtap="closefun"><image src="../../../img/my-btnimg23.png"></image></view>
        <image class="redbag-box2-img" mode="widthFix" src="{{shareUserAvatarUrl}}"></image>
        <view class="share-name2">
          <block wx:if="{{redbagtype == 1}}">{{shareUserNickName}}的红包</block>
          <block wx:else>XXX好友的红包</block>
        </view>
        <view class="font-text3">红包返现</view>
        <view class="redbag-amount">{{redbagdata.amount}}<text>元</text></view>
        <view class="font-text4">已存入余额，可直接提现</view>
        <view class="redbaginfo-box">
          <view class="borderB redbaginfo-box-top">
            {{redbagdata.actRedPacketDTO.totalNum}}个红包 / 已领{{redbagdata.actRedPacketDTO.receivedNum}}个
          </view>
          <block wx:for="{{redbagdata.actRedPacketRecordDTOS}}" wx:for-item="item" wx:key="index">
            <view class="borderB redbag-libox">
              <view class="redbag-libox-l">
                <image wx:if="{{item.receiveCustomAvatarUrl}}" class="tx-img" src="{{item.receiveCustomAvatarUrl}}"></image>
                <image wx:else class="tx-img" src="../../../img/my-btnimg25.png"></image>
                <view>
                  <view class="font-name">
                    <block wx:if="{{item.receiveCustomNickName}}">{{item.receiveCustomNickName}}</block>
                    <block wx:else>XXX</block>
                  </view>
                  <view class="font-time">{{item.createdAt}}</view>
                </view>
              </view>
              <view class="redbag-libox-r">{{item.receivceAmount}}元</view>
            </view>
          </block>
        </view>
        <view class="font-btm">可于“我的-我的余额”查看记录</view>
      </view>
    </scroll-view>
  </view>
</view>