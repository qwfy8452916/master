<view class='pagebox paddB3 {{coupontype == true?"showclass":""}}'>
  <swiper
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular="{{circular}}"
    indicator-dots="true"
    indicator-color="#fff"
    indicator-active-color="#ff9c01"
    style="height:{{imgheights[current]}}rpx;"
    bindchange="bindchange"
  >
    <block wx:for="{{bannerImageList}}" wx:for-item="item" wx:key="index">
      <swiper-item class="swiperitembox">
        <image src="{{item}}" class="slide-image" mode="widthFix" data-id='{{index}}' bindload="imageLoad" />
      </swiper-item>
    </block>
  </swiper>
  <view wx:if="{{ptype == 1}}" class="roomcode">{{roomCode}}-{{latticeCode}}</view>
  <view class='details-info mgB20'>
    {{prodShowName}}
    <view class='details-price'>
      ¥ <block wx:if="{{isFree==1}}">0.00 </block><block wx:else>{{prodRetailPrice}} </block>
      <text class="freetext" wx:if="{{prodMarketPrice != 0 && prodMarketPrice != prodRetailPrice}}">¥ {{prodMarketPrice}}</text>
    </view>
  </view>
  <view wx:if="{{couponlist.length > 0}}" class="couponbox mgB20" bindtap="showcoupon">
    <view class="couponboxL">优惠</view>
    <view class="couponboxC">
      <view class="coupon-box">
        <view class="couponboxC-t">满{{couponlist[0].useLimitMoney}}减{{couponlist[0].reduceMoney}}</view>
      </view>
    </view>
    <view class="couponboxR">领券 <image class="iconimgwh" src="../../img/my-bgimg2.png"></image></view>
  </view>
  <view wx:if="{{total != 0}}" class="paddAll borderB font-bttext" bindtap="evaluatefun">
    <view>商品评价<text class="font-bttext-text">({{total}})</text></view>
    <view class="lookall">查看全部 <image class="iconimgwh" src="../../img/my-bgimg2.png"></image></view>
  </view>
  <view class="lastnoneborder">
    <block wx:for="{{evaluatelist}}" wx:for-item="item" wx:key="index"><!-- 评价 -->
      <view class="paddAll evaluation">
        <view class="evaluationT">
          <image class="userimg" src="{{item.avatarUrl != null?item.avatarUrl:'../../img/icon-img10.png'}}"></image>
          <text wx:if="{{item.nickName != null}}" class="font-username">{{item.nickName}}</text>
        </view>
        <view class="conttent-font contenthide">{{item.remarkContent}}</view>   
      </view>
    </block>
  </view>
  <view class="paddAll borderB font-bttext mgT20">商品详情</view>
  <block wx:for="{{descImageList}}" wx:for-item="item" wx:key="index">
    <image class='details-img' mode='widthFix' src='{{item}}'></image>
  </block>
  <block wx:if="{{canbuy == 1 && shareuser == ''}}">
    <view class="buybtn">
      <view class="shopcarbox" bindtap="shopcarfun"><image src="../../img/shoppingcart.png"></image></view>
      <block wx:if="{{jointype != false}}">
        <view wx:if="{{jointype == -1}}" class="joincar" bindtap="joincarfun">加入购物车</view>
        <view wx:else class="joincar buybtnbg">已加入购物车</view>
      </block>
      <view wx:if="{{buybtntype == 1}}" class="buy-btn" bindtap="purchase">立即购买</view>
      <view wx:else class="buy-btn buybtnbg"><block wx:if="{{buybtntype == 2}}">下单中</block><block wx:else>暂不支持购买</block></view>
    </view>
  </block>
</view>
<pop id='dialog' bind:redirectfun="redirectfun"></pop>

<view class="couponlistbox-bg" wx:if="{{coupontype == true}}">
  <view class="couponlistbox">
    <view class="font-title">优惠券</view>
    <view class="font-prod1 mgB30">商品售价 ¥<block wx:if="{{isFree==1}}">0.00 </block><block wx:else>{{prodRetailPrice}}</block>，使用以下优惠 可减 ¥ <text class="font-color3">{{couponlist[0].reduceMoney}}</text></view>
    <view class="font-prod2 mgB30">领券</view>
    <scroll-view scroll-y style="height: 60%;">
      <block wx:for="{{couponlist}}" wx:for-item="item" wx:key="index">
        <view class="couponlist-li">
          <view class="couponlist-li-l">
            <view class="font-l1">¥ <text class="font-l3">{{item.reduceMoney}}</text> {{item.couponName}}</view>
            <view class="font-l2">满{{item.useLimitMoney}}使用</view>
            <view wx:if="{{item.couponTermType == 0}}" class="font-l2">领取后{{item.couponTermDays}}天内可用</view>
            <view wx:else class="font-l2">有效期至 {{item.couponTermEndDate}} 前</view>
          </view>
          <view class="couponlist-li-r font-l1" data-id="{{item.id}}" bindtap="receive">立即领取</view>
        </view>
      </block>
    </scroll-view>
    <view class="font-l4">以上价格计算仅为初步预估，不代表最终购买价格</view>
    <view class="closebtn" bindtap="showcoupon">关闭</view>
  </view>
</view>