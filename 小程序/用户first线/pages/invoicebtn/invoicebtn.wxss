.orderlist{
  background: #fff;
  padding-left: 5%;
}
.orderlist-li{
  padding-bottom: 30rpx;
  padding-top: 30rpx;
  border-bottom: 1px solid #e6e6e6;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.orderlist-li-img{
  width: 25%;
}
.orderlist-li-img image{
  display: block;
  width: 100%;
  height: 160rpx;
}
.orderlist-li-info{
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.orderlist-li-info-name{
  font-size: 0.9rem;
  color: #333333;
  width: 100%;
  margin-bottom: 15rpx;
}
.orderlist-li-info-price{
  font-size: 0.8rem;
  color: #ee1e1e;
  text-align: left;
  width: 100%;
  margin-bottom: 15rpx;
}
.orderlist-li-info-time{
  font-size: 0.8rem;
  color: #999999;
  text-align: left;
  width: 100%;
}
.orderlist-li-img2{
  width: 10%;
}
.orderlist-li-img2 image{
  display: block;
  width: 100%;
}