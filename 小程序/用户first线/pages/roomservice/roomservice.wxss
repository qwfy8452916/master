page{
  background: #fff;
}
.roomservice-top{
  display: flex;
  /* justify-content: space-between; */
  justify-content: space-around;
  align-items: center;
  position: fixed;
  z-index: 9;
  top:0;
  left: 0;
  right: 0;
  background: #fff;
  border-bottom: 1px solid #f3f3f3;
  border-top: 1px solid #f3f3f3;
}
.roomservice-top .roomservice-top-btn{
  width: 40%;
  font-size: 1rem;
  color: #333;
  text-align: center;
  line-height: 2.5rem;
  /* padding-bottom: 10rpx; */
}
