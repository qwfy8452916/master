.roomservice-top  .roomservice-top-btn-active{
  color: #ff9d00;
  border-bottom: 2px solid #ff9d00;
}
.banner{
  padding-top: 4rem;
  margin-bottom: 1rem;
}
.banner image{
  display: block;
  width: 100%;
}
.roomservice-typeli{
  padding: 20rpx 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.roomservice-typeli .roomservice-typeli-left{
  width: 80%;
  display: flex;
  align-items: center;
}
.roomservice-typeli .roomservice-typeli-left image{
  display: inline-block;
  width: 30%;
  height: 130rpx;
  margin-right: 2%;
}
.roomservice-typeli .roomservice-typeli-left text{
  display: inline-block;
  font-size: 0.9rem;
  width: 70%;
}
.roomservice-typeli-right{
  width: 2%;
  height: 40rpx;
}
.shoppingcart{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  z-index: 9;
  background: #fff;
  border-radius: 50%;
  left: 3%;
  bottom: 13%;
  display: flex;
  align-items: center;
  border:1px solid #f2f2f2;
}
.shoppingcart .shoppingcart-img{
  display: block;
  width: 50%;
  height: 50%;
  margin: 0 auto;
}
.shoppingcart-num{
  position: absolute;
  top: 0;
  right: 0rpx;
  width: 35rpx;
  height: 35rpx;
  background: red;
  font-size: 0.5rem;
  color: #fff;
  text-align: center;
  line-height: 35rpx;
  border-radius: 50%;
}