<block wx:if="{{commoditytype}}">
  <scroll-view class="commoditylist" scroll-x style="top: 300rpx;background: #fff;">
    <block wx:for="{{listcommodity}}" wx:for-item="item" wx:key="index">
      <view wx:if="{{item.displayFlag == 1}}" class='commoditylist-view {{typenum==index?"commodityactive":""}}' data-id="{{item.id}}" data-num="{{index}}" bindtap='changeType'>
        {{item.categoryName}}
      </view>
    </block>
  </scroll-view>
  <view class='commodity-list'>
    <block wx:for="{{commoditylist}}" wx:for-item="item" wx:key="index">
      <view wx:if="{{item.onShelf != 0}}" class='commodityview' bindtap='details' data-hotelProdId='{{item.hotelProdId}}'>
        <image src='{{item.prodLogoUrl}}' mode='aspectFill' class='commodityimg'></image>
        <view class='commodityview-btm'>
          <view class='font-name'>{{item.prodShowName}}</view>
          <view class='font-price'>￥<text>{{item.prodRetailPrice}}</text></view>
        </view>
      </view>
    </block>
  </view>
  <view class='shoppingcart' bindtap='buycarfun'>
    <image class='shoppingcart-img' src='../../img/shoppingcart.png'></image>
  </view>
</block>
<block wx:else>
  周边商品
</block>

<view class='footerbox'>
  <view class='footerbox-btn' bindtap='index' wx:if="{{isvirtual}}">
    <text class='iconfont icon-zhuye-selected' style='color: #999999;font-size: 50rpx;'></text>
    <view class='footerbox-btnname' style='color: #999999;'>迷你吧</view>
  </view>
  <view class='footerbox-btn' bindtap='roomservice' wx:if="{{isvirtual && isSupportRmsvc == 1}}">
    <text class='iconfont icon-zuanshi1' style='color: #999999;font-size: 40rpx;'></text>
    <view class='footerbox-btnname' style='color: #999999;margin-top: 5rpx;'>客房服务</view>
  </view>
  <view v-if="{{isSupportDelivery == 1}}" class='footerbox-btn'>
    <text class='iconfont icon-shangcheng2' style='color: {{themecolor.skintone}};font-size: 40rpx;'></text>
    <view class='footerbox-btnname' style='color: {{themecolor.skintone}};margin-top: 5rpx;'>酒店商城</view>
  </view>
  <view class='footerbox-btn' bindtap='mypage'>
    <text class='iconfont icon-yduigerenzhongxinxuanzhong' style='color: #999999;font-size: 50rpx;'></text>
    <view class='footerbox-btnname' style='color: #999999;'>我的</view>
  </view>
</view>