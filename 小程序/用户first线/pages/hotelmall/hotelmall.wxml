<swiper indicator-dots='true' indicator-color='rgba(204, 204, 204, 0.8)' indicator-active-color='#ffc000' autoplay='true' interval='3000' duration='500' display-multiple-items='1' class="bannerbox">
  <block wx:for="{{bannerImageList}}" wx:for-item="item" wx:key="index">
    <swiper-item>
      <image src="{{item}}" data-id='{{index}}' class="slide-image" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>

