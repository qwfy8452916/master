.pagebox{
  position: relative;
}
.pagebox-bg{
  position: absolute;
  top: 0;
  left: 0;
  right: 0%;
  display: block;
  width: 100%;
  z-index: 0;
}
.pagebox-box{
  position: absolute;
  z-index: 2;
  width: 100%;
  top: 0;
  right: 0;
  left: 0;
}
.userinfo{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 50rpx 5%;
}
.userimg{
  width: 20%;
  border-radius: 50%;
  border: 5px solid #f5a033;
  overflow: hidden;
  margin-right: 20rpx;
}  
.userimg .userimg-img{
  display: block;
  width: 100%;
}
.username{
  font-size: 1rem;
  font-weight:bold;
  color: #fff;
}
.mybtnbox{
  width: 90%;
  margin: 0.8rem auto 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 5px;
}
.mybtnbox-btn{
  width: 25%;
  text-align: center;
  border-right: 1px solid #e6e6e6;
}
.mybtnbox-btn:last-child{
  border-right: none;
}
.mybtnbox-name{
  font-size: 0.75rem;
  color: #666666;
}
.mybtnbox-img image{
  display: block;
  width: 50%;
  margin: 0 auto;
}
.mylistbox-li-name{
  font-size: 0.8rem;
  color: #666666;
}
.mylistbox-li-img{
  display: block;
  width: 15%;
  margin-right: 15rpx;
}
.mylistbox{
  background: #fff;
  padding-left: 5%;
  padding-right: 5%;
  margin-top: 1rem;
}
.mylistbox-li{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 1px solid #e6e6e6;
}
.mylistbox-li-left{
  width: 70%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.mylistbox-li-bg{
  display: block;
  width: 3%;
}
.mylistbox .mylistbox-li:last-child{
  border-bottom: none;
}